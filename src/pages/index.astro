---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import NavBar from '../components/NavBar.astro';
import VerticalNav from '../components/VerticalNav.astro';
import Slideshow from '../components/SlideshowD&R.astro';
import SlideshowOffers from '../components/SlideshowOffers.astro';
import SlideshowCategories from '../components/SlideshowCategories.astro';
---

<Layout title="Bienvenidos a Steam">
	<Header />
	<main>
		<section class="sectionBackground flex flex-col justify-center items-center h-[420px]">
			<div class="bgVideo absolute w-full overflow-hidden z-0">
				<video autoplay muted loop>
					<source src="https://cdn.cloudflare.steamstatic.com/steam/clusters/frontpage/65b8f08efe2288a7cb56e345/webm_page_bg_latam.webm?t=1707952653" type="video/webm">
				</video>
			</div>
			<NavBar />
			<div class="h-[385px] w-screen hover:cursor-pointer">
			</div>
		</section>
		<section class="flex flex-row justify-end bg-[#1b2838] pt-5">
			<VerticalNav />
			<div class="flex flex-col w-full items-start ml-[70px]">
				<h2 class="text-sm">DESTADOS Y RECOMENDADOS</h2>
				<Slideshow />
				<div class="mt-20">
					<img src="https://cdn.cloudflare.steamstatic.com/steam/clusters/takeunder/05c5576603e7e08269683432/takeunder_desktop_spanish.jpg?t=1707773188" alt="banner" />
				</div>
				<div class="mt-10">
					<h2 class="text-sm">OFERTAS ESPECIALES</h2>
					<SlideshowOffers />
				</div>
				<div class="mt-20">
					<h2 class="text-sm">EXPLORAR POR CATEGOR√çA</h2>
					<SlideshowCategories />
				</div>
				
			</div>
		</section>
	</main>	
</Layout>

<style>
	main {
		width: 100%;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.sectionBackground {
		background-image: url('https://clan.akamai.steamstatic.com/images/1541443/d99637732a48c270a0a2811f15af700856faf614.jpg');
		background-position: center;
	}

</style>
