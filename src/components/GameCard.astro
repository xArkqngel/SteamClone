---
import GameDiscountCard from "./GameDiscountCard.astro";

interface game{
    ogPrice: string;
    discount: string;
    price: string;
    offerEndDate: string;
    bgImage: string;
}

const {game} = Astro.props;
---

<div class="flex flex-col shadow-md shadow-black">
    {game.offerEndDate ? (
        <div class="w-[306px] h-[350px]">
            <img src={game.bgImage} alt="game" class="w-full h-[350px] object-cover" />
            <div class="spotlight absolute flex flex-col items-start gap-2 bottom-0  bg-black bg-opacity-50 text-white text-center p-2">
                <h2 class="text-sm">OFERTA DE ENTRE SEMANA</h2>
                <p class="text-xs text-[#acdbf5]">{game.offerEndDate}</p>
                <GameDiscountCard price={game.ogPrice} discount={game.discount} priceWithDiscount={game.price} />
            </div>
        </div>
    ) : (
    <div class=" w-[306px] h-[146px]">
            <img src={game.bgImage} alt="game" class="w-full h-[124px] object-cover" />
            <div class="spotlight flex flex-col items-end bg-black bg-opacity-50 text-white text-center p-1">
                <GameDiscountCard price={game.ogPrice} discount={game.discount} priceWithDiscount={game.price} />
            </div>
        </div>
    )}
</div>

<style>
    .spotlight {
        background-image: url(https://store.cloudflare.steamstatic.com/public/images/v6/home/background_spotlight.jpg);
        background-size: cover;
        padding: 8px 16px 12px 16px;
        min-height: 23px;
        width: 306px;
    }
</style>